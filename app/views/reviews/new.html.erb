<div class="container">
  <div class="row justify-content-center">
      <div class="col-6">
        <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, as: :integer, collection: 0..5 %>
        <!-- adds bootstrap button  -->
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
